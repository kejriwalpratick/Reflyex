<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kejriwalpratick.reflyex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blueicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:roundIcon="@drawable/web_hi_res_512"
        android:supportsRtl="true">
        <activity
            android:name=".opening"
            android:theme="@style/splashTheme"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait"></activity>
        <activity
            android:name=".gameplay"
            android:screenOrientation="sensorPortrait"></activity>
        <activity android:name=".Instructions"
            android:screenOrientation="sensorPortrait">

        </activity>
    </application>

</manifest>